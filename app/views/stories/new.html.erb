<h1>New Story</h1>

<%= form_for @story do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Enter Story Title here" %>
  </div>
  <div class="form-group">
    <%= f.label :summary %>
    <%= f.text_field :summary, class: 'form-control', placeholder: "What's the story about?" %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control', placeholder: "Enter the story below" %>
  </div>
  <%= f.submit "Save", class: 'btn btn-success' %>
<% end %>