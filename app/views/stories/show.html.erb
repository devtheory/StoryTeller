<h1><%= @story.title %> <small>by <%= @story.user.name %></small></h1>
  <% if policy(Story.new).update? %>
    <%= link_to "Edit", edit_story_path, class: "btn btn-primary" %>
  <% end %>
  <% if policy(Story.new).create? && (current_user.id == @story.user_id) %>
    <%= link_to "Assign Collaborators", edit_story_path, class: 'btn btn-primary' %>
  <% end %>
<hr>
<%= simple_format(@story.body) %>