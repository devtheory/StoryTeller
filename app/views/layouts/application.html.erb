<!DOCTYPE html>
<html>
<head>
  <title>StoryTeller</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= render "shared/nav" %>

<% if current_user %>
  <%= render "shared/sidebar" %>
  <!-- Content starts -->
  <div id="main" role="main">
    <div id="content">
      <%= yield %>
    </div>
  </div>
<% else %>
    <%= yield %>
<% end %>
  
  

</body>
</html>