<button href="#<%= story.id %>" id="openBtn" data-toggle="modal" class="btn btn-link"><%= story.title %></button>

<div class="modal fade" id="<%=story.id%>">
<div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
          <h3 class="modal-title"><%= story.title %></h3>
        </div>
        <div class="modal-body">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h6 class="panel-title">Collaborators available</h6>
            </div>
            <table class="table">
              <th>User</th>
              <th>Select</th>
              <% collaborators.each do |collaborator| %>
                <tr>
                  <td><%=collaborator.name%></td>
                  <td><%= form_for (collaborator) do |f| %>
                      <%= f.label :add %>

                      <%= f.check_box :collaborating_on, {}, "#{story.id}", "none" %>
                      <%= f.submit "Save" %>
                      <% end %>
                  </td>
                </tr>
              <% end %>
            </table>
          </div>

          
            
            <div class="clearfix"></div>
          
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default " data-dismiss="modal">Close</button>
        </div>
        
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->