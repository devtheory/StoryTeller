<div class="header alt vert">
  <div class="container">
    
    <h1>StoryTeller</h1>
      <p class="lead">Write your stories from wherever you are, whenever you want</p>
      <div>&nbsp;</div>
      <% unless current_user %>
      <%= link_to "Sign In", new_user_session_path, class: 'btn btn-default btn-lg' %> or <%= link_to "Sign Up", new_user_registration_path, class: 'btn btn-default btn-lg' %>
      <% end %>
  </div>
</div>

<hr>

