<aside id="left-panel">
  <!-- User logged in -->
  <div class="login-info">
    <span> <!-- User image size is adjusted inside CSS, it should stay as it -->  
      <a href="javascript:void(0);" id="show-shortcut">
        <%= image_tag(current_user.avatar) %> 
        <span>
          <%= link_to edit_user_registration_path do %> 
            <%= current_user.name %> <i class="fa fa-angle-down"></i>
        </span>
        <% end %>
      </a> 
   </span>
  </div>

  <!-- Navigation starts -->
  <nav>
    <ul>
      <li><%= link_to stories_path do %>
        <i class="fa fa-lg fa-fw fa-book"></i> <span class="menu-item-parent">Stories</span>
        <% end %>
      </li>
      <% if policy(Story.new).create? %>
      <li><%= link_to new_story_path do %>
        <span class="menu-item-parent">New Story</span>
        <% end %>
      </li>
      <% end %>
    </ul>
  </nav>
</aside>